{
  "name": "turtletoy",
  "version": "1.0.3",
  "description": "",
  "keywords": [
    "generative art",
    "generative design",
    "procedural generation",
    "turtle graphics",
    "plotter",
    "svg",
    "javascript",
    "art",
    "code",
    "drawing",
    "creative coding",
    "turtletoy"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/reindernijhoff/turtletoy-package.git"
  },
  "author": "Reinder Nijhoff <reinder@infi.nl>",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "main": "./dist/turtletoy.umd.cjs",
  "module": "./dist/turtletoy.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/turtletoy.js",
      "require": "./dist/turtletoy.umd.cjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "clean": "shx rm -rf dist node_modules/.cache/.tsbuildinfo",
    "prepare-publish": "tsx ./scripts/preparePublish.ts"
  },
  "devDependencies": {
    "@types/shelljs": "^0.8.15",
    "shelljs": "^0.10.0",
    "shx": "^0.4.0",
    "tsx": "^4.7.1",
    "typescript": "^5.9.3",
    "vite": "^7.0.0",
    "vite-plugin-dts": "^4.5.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
